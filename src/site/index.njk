<ul class="listing">
  {# next speaking event #}
  <li class="item item-event">
    <h2><a href="#">Next event</a></h2>
    <div>Will take place on <time datetime="">May 24th 2018</time></div>
    <p>
      <a href="#">JAMstack Porto</a> - Porto, Portugal
    </p>
  </li>
  {# 5 most recent blog posts #}
  {%- for i in range(0, 5) -%}
  {% set item = collections.blogposts[i] %}
  <li class="item item-post">
    <h2><a href="{{ item.url }}">{{ item.data.title }}</a></h2>
    <div>Posted on <time datetime="{{ item.date }}">{{ item.date | dateDisplay }}</time></div>
    <ul class="meta tags">
    {%- for tag in item.data.tags -%}
      <li><a href="/tags/{{tag}}">{{tag}}</a></li>
    {% endfor -%}
    </ul>
    <img src="{{item.data.hero }}" class="heroImage" />
    <div class="excerpt">
      {{- item.templateContent | excerpt | safe -}}
    </div>
    <a class="more" href="{{ item.url }}">read more</a>
  </li>
  {%- endfor -%}
</ul>
