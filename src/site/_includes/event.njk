  <div class="blog-list-item">
    <p class="by-line">
      {{ item.starts_on | dateDisplay }},
      {% if item.address == 'Earth' -%} online{%- else  -%} in {{ item.address }}
    </p>{%- endif %}
    <h3>
      <img src="/images/flags/{% if item.country_code %}{{ item.country_code }}{% else %}world{% endif %}.svg" class="flag" />
      <a href="{{ item.url }}" target="NEW" rel="noopener">{{ item.title }}</a>
    </h3>
  </div>
