<!doctype html>
<html lang="en" class="{{ pageClass }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preload" href="/_static/fonts/placardmtstd-cond-webfont.woff2" as="font" type="font/woff2" crossorigin>
    <style>{% include "css/main.css" %}</style>
    <title>{{ title }}</title>
  </head>
  <body >
    {% block sidebar %}
    <div class="sidebar">
      <header>
        <div class="sidebar-container">
          {% include "navigation.njk" %}
          {# page title and meta data #}
          <div class="page-details">
            <p class="date">{{ date | dateDisplay }} by <a href="/about">Phil Hawksworth</a></p>
            <h1>{{ title }}</h1>
            <ul class="tags">
            {% for tag in tags %}
              <li><a href="/tags/{{ tag }}" class="tag"># {{ tag }}</a></li>
            {% endfor %}
            </ul>
          </div>
        </div>
      </header>
    </div>
    {% endblock %}
    <div class="main">
      <div class="container">
      {% block main %}
      {{ content | safe }}
      {% endblock %}
      </div>
      <footer>
        {# tese the previous post here? #}
        <div class="solid-footer">
          <div class="container">
            <p>
              The source code of this site is available to view and fork on Github and served on the JAMstack by Netlify.
            </p>
            <p>
  Other than where specified, the content on this site is published under a Creative Commons Attribution 3.0 licence.
            </p>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>



